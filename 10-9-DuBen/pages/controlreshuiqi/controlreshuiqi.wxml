<!--pages/controlreshuiqi/controlreshuiqi.wxml-->
<view class="TVPage">
<view class="kongtiao">热水器</view>
<view class="on-off">
<view  style="margin-left: 5%;width:70%;float:left;">{{status}}</view>
<view style="width:20%;float:right;margin-right:5%;"><switch class="kaiguan" color="#fe6e09" checked="{{isChecked1}}" bindchange="changeSwitch1" /></view>
</view>
<view class="show">
<view class="temperature">
<view class="number">{{model}}</view>
<view class="xuehuaimg"><image class="xuehua" src="/img/1194839.png"></image></view>
</view></view>

<view class="model">
<view class="modelcontrol">
<view class="cold" bindtap="modelcontrol" data-state="1"><image class="img" src="/img/1194839.png"></image></view>
<view class="coldtext">热水</view></view>
<view class="modelcontrol">
<view class="warm" bindtap="modelcontrol" data-state="2"><image class="img" src="/img/1194839.png"></image></view><view class="warmtext">暖水</view></view>
<view class="modelcontrol">
<view class="auto" bindtap="modelcontrol" data-state="3"><image class="img" src="/img/1194839.png"></image></view><view class="autotext">温水</view></view>
</view>
</view>