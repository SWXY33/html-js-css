/* 下拉框 */

.top-selected {
  width: 17%;
  display: flex;
  float: left;
  align-items: center;
  justify-content: space-between;
  padding: 0 10rpx;
  font-size: 30rpx;
}

/* 下拉内容 */

.select_box {
  background-color: #fff;
  padding: 0 20rpx;
  width: 14%;
  float: left;
  position: absolute;
  left: 25%;
  top:660rpx;
  z-index: 100;
  overflow: hidden;
  text-align: left;
  animation: myfirst 0.1s;
  font-size: 30rpx;
}
/* 下拉图标 */

.top-selected image {
  height: 50rpx;
  z-index: 100;
  width: 50rpx;
  position: absolute;
  left: 38%;
  top:620rpx;
}
.inputphone1{
  width: 50%;
