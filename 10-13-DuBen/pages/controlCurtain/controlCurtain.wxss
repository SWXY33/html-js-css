/* pages/controlCurtain/controlCurtain.wxss */
.TVPage{
  height: 100%;
  overflow-x: hidden;/*解决小程序页面左右晃动出现空白区域
  hidden会让x方向上的滚动条隐藏*/
}
.curtain{
  text-align: center;
  margin-top: 20rpx;
}


.show{
  margin-top: 150rpx;
width: 100%;
height: 400rpx;
text-align: center;
}
.open{
  margin-left: 25%;
  text-align: center;
  line-height: 300rpx;
  font-size: 50rpx;
  color: #2785e7;
  width: 50%;
  border-radius: 50%;
  height: 400rpx;
  border: 2rpx solid #2785e7;
}

.number{
margin-left: 2%;
  width: 98%;
  height: 80rpx;
  float: left;
}

.speed{
  margin-top: 50rpx;
width: 100%;
height: 100rpx;
}

.wind-speed{
  margin-left: 2%;
  float: left;
  width: 70rpx;
  height: 70rpx;
}

.w-text{
  text-align: center;
  line-height: 70rpx;
  float: left;
  width: 70rpx;
  height: 70rpx;
}
.slider{
  float: left;
  width: 520rpx;
  height: 100%;
}
.slider slider{
  width: 90%;
  margin-left: 4%;
  margin-right: 0;

}
.small{
  margin-top: -20rpx;
  margin-left: 9%;
  width: 32%;
  float: left;
}
.big{
  margin-top: -20rpx;
  text-align: right;
  margin-right: 9%;
  width: 32%;
  float: right;

}